{
  "schemaVersion": 1,
  "id": "theforge",
  "version": "${version}",

  "name": "The Forge",
  "description": "A modular tool mod drawing inspiration from tinkers construct",
  "authors": [
    "Sussy_Syrup"
  ],
  "contact": {
    "homepage": "https://github.com/sussy-syrup",
    "sources": "https://github.com/sussy-syrup/the-forge"
  },

  "license": "MIT",
  "icon": "assets/theforge/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.sussysyrup.theforge.Main"
    ],
    "client": [
      "com.sussysyrup.theforge.Client"
    ],
    "preLaunch": [
      "com.sussysyrup.theforge.PreLaunch"
    ],
    "ForgeSetup": [
      "com.sussysyrup.theforge.SetupCommon"
    ],
    "ForgeSetupPost": [
      "com.sussysyrup.theforge.PostCommon"
    ],
    "ForgeSetupPostMaterials": [
      "com.sussysyrup.theforge.PostMaterialCommon"
    ],
    "ForgeSetupPostFluids": [
      "com.sussysyrup.theforge.PostFluidCommon"
    ]
  },
  "mixins": [
    "theforge.mixins.json"
  ],
  "accessWidener": "theforge.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "Patchouli"
  }
}
